@using Microsoft.AspNetCore.Identity
@using EasyGames.Services
@using EasyGames.Data
@using System.Security.Claims
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ICartService Cart
@inject ApplicationDbContext DbContext
@* layout injects identity and cart services shows nav links based on login and role displays cart count badge and
renders tempdata alerts for user feedback *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EasyGames</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EasyGames.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EasyGames</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <!-- Left nav -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Catalogue" asp-action="Index">Shop</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PublicCampaigns" asp-action="Index">
                                <i class="bi bi-megaphone"></i> Campaigns
                            </a>
                        </li>

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Orders" asp-action="Index">
                                    <i class="bi bi-receipt"></i> My Orders
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart"></i> Cart
                                @if (Cart.GetCount() > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        @Cart.GetCount()
                                        <span class="visually-hidden">items in cart</span>
                                    </span>
                                }
                            </a>
                        </li>
                        
                        <!-- Note from FRANK - Claude Code helped me add these new links. We discussed it. Not copy and pasted so no prompt available. -->
                        @if (User.IsInRole("Proprietor"))
                        {
                            var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
                            var hasShops = DbContext.Shops.Any(s => s.ProprietorUserId == userId);

                            if (hasShops)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-shop"></i> Proprietor
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="ShopStock" asp-action="Index">
                                                <i class="bi bi-box-seam"></i> My Shop
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Pos" asp-action="Index">
                                                <i class="bi bi-cash-register"></i> POS
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="PosOrders" asp-action="Index">
                                                <i class="bi"></i>POS Orders
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                            }
                        }
                        <!-- Moved to drop down list using Claude Code. "Can you group all the admin links under a dropdown menu to clean up the navbar? "-->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear"></i> Admin
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="StockItems" asp-action="Index">
                                            <i class="bi bi-box"></i> Stock Items
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Shops" asp-action="Index">
                                            <i class="bi bi-shop"></i> Manage Shops
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Users" asp-action="Index">
                                            <i class="bi bi-people"></i> Users
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="OrdersAdmin" asp-action="Index">
                                            <i class="bi bi-clipboard-check"></i> All Orders
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="EmailGroups" asp-action="Index">
                                            <i class="bi bi-envelope-paper"></i> Email Groups
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Campaigns" asp-action="Index">
                                            <i class="bi bi-megaphone-fill"></i> Manage Campaigns
                                        </a>
                                    </li>


                                </ul>
                            </li>
                        }
                        <!-- End claude code reference -->
                    </ul>

                    <!-- Right nav -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Index">
                                    <i class="bi bi-person-circle"></i> My Account
                                </a>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["AlertSuccess"] is string s)
            {
                <div class="alert alert-success">@s</div>
            }
            @if (TempData["AlertInfo"] is string i)
            {
                <div class="alert alert-info">@i</div>
            }
            @if (TempData["AlertDanger"] is string d)
            {
                <div class="alert alert-danger">@d</div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            EasyGames - <a asp-area="" asp-controller="Home" asp-action="License">MIT License</a>. University project at Charles Darwin University.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
