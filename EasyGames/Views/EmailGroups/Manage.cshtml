@model EasyGames.Models.Emailing.CustomerGroup
@{
    ViewData["Title"] = "Manage Group";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Manage: @Model.Name</h1>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
<p class="text-muted">@Model.Description</p>

<h4 class="mt-4">Add member</h4>
<form asp-action="AddMember" method="post" class="row g-2">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="col-md-4">
        <input name="email" class="form-control" placeholder="email@example.com" required />
    </div>
    <div class="col-md-3">
        <input name="name" class="form-control" placeholder="Display name (optional)" />
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary w-100" type="submit">Add</button>
    </div>
</form>

<h4 class="mt-4">Members (@(Model.Members?.Count ?? 0))</h4>
@if (Model.Members == null || !Model.Members.Any())
{
    <div class="alert alert-light border">No members yet.</div>
}
else
{
    <table class="table table-sm align-middle">
        <thead>
            <tr>
                <th>Email</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model.Members.OrderBy(x => x.Email))
            {
                <tr>
                    <td>@m.Email</td>
                    <td>@m.DisplayName</td>
                </tr>
            }
        </tbody>
    </table>
}
