@model IEnumerable<EasyGames.Models.Emailing.CustomerGroup>
@{
    ViewData["Title"] = "Email Groups";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Email Groups</h1>
    <a asp-action="Create" class="btn btn-primary">New Group</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No groups yet. Create one to get started.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Members</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var g in Model)
            {
                <tr>
                    <td>@g.Name</td>
                    <td>@g.Description</td>
                    <td>@(g.Members?.Count ?? 0)</td>
                    <td class="text-end">
                        <a asp-action="Manage" asp-route-id="@g.Id" class="btn btn-sm btn-outline-secondary">Manage</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
