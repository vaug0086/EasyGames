@model IEnumerable<EasyGames.Models.Order>
@{
    //  orders index view shows the logged-in user’s order history
    //  it binds to ienumerable<order> provided by orderscontroller.index
    //  if there are no orders it shows a simple message
    //  otherwise it renders a table of orders with id created date status grand total and a link to details
    //  this view gives users a quick overview of their past purchases and access to full order details
    ViewData["Title"] = "My Orders";
}

<h2>My Orders</h2>

@if (!Model.Any())
{
    <p>You haven’t placed any orders yet.</p>
}
else
{
    <table class="table">
        <thead><tr><th>#</th><th>Date</th><th>Status</th><th>Total</th><th></th></tr></thead>
        <tbody>
            @foreach (var o in Model)
            {
                var hasBackorder = o.Items.Any(i => i.IsBackordered); // we're checking for backordered items and saving them
                var backorderCount = o.Items.Where(i => i.IsBackordered).Sum(i => i.QuantityBackordered);
                <tr>
                    <td>@o.Id</td>
                    <td>@o.CreatedUtc.ToLocalTime()</td>
                    <td>
                        @o.Status
                        @if (hasBackorder)
                        {
                            <br />
                            <span class="badge bg-warning text-dark">
                                @{
                                    // NOTE FROM FRANK
                                    // if items are backordered we add a badge
                                    // we use the ternary operator to add an s if there are more than 1 on backorder 
                                    // see more about the ternary operator on PosController.cs
                                    // <i> is for the icon
                                }
                                <i class="bi bi-clock-history"></i> @backorderCount item@(backorderCount == 1 ? "" : "s") backordered
                            </span>
                        }
                    </td>
                    <td>@o.GrandTotal.ToString("C")</td>
                    <td><a asp-action="Details" asp-route-id="@o.Id" class="btn btn-sm btn-outline-secondary">View</a></td>
                </tr>
            }
        </tbody>
    </table>
}
