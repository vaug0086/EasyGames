@model EasyGames.Models.Order
@{
    ViewData["Title"] = $"Order #{Model.Id}";
}

<h1>Order #@Model.Id</h1>
<p class="text-muted">
    Placed @Model.CreatedUtc.ToString("yyyy-MM-dd HH:mm") by
    @Model.User?.FullName (@Model.User?.Email)
</p>

<p>
    <span class="badge @(Model.Status == "Pending"
                  ? "bg-warning text-dark"
                  : Model.Status == "Fulfilled"
                      ? "bg-success"
                      : Model.Status == "Cancelled"
                          ? "bg-secondary"
                          : "bg-light text-dark")">
        @Model.Status
    </span>
</p>

<div class="mb-3">
    <strong>Ship to:</strong>
    <div>@Model.ShippingName</div>
    <div>@Model.ShippingAddress</div>
</div>

@if (Model.Items == null || !Model.Items.Any())
{
    <div class="alert alert-info">This order has no items.</div>
}
else
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th class="text-end">Qty</th>
                    <th class="text-end">Unit price</th>
                    <th class="text-end">Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.Items)
                {
                    <tr>
                        <td>@i.StockItem?.Name</td>
                        <td class="text-end">@i.Quantity</td>
                        <td class="text-end">@i.UnitPriceAtPurchase.ToString("C")</td>
                        <td class="text-end">@((i.UnitPriceAtPurchase * i.Quantity).ToString("C"))</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3" class="text-end">Subtotal</th>
                    <th class="text-end">@Model.Subtotal.ToString("C")</th>
                </tr>
                <tr>
                    <th colspan="3" class="text-end">Grand total</th>
                    <th class="text-end">@Model.GrandTotal.ToString("C")</th>
                </tr>
            </tfoot>
        </table>
    </div>
}

<a asp-action="Index" class="btn btn-secondary">Back</a>
