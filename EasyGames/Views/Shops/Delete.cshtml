@model EasyGames.Models.Shop

@{
    ViewData["Title"] = "Delete Shop";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this shop?</h3>
<div>
    <h4>Shop</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            Proprietor
        </dt>
        <dd class = "col-sm-10">
            @(Model.Proprietor?.Email ?? "Not assigned")
        </dd>
    </dl>

    @if (Model.ShopStock?.Count > 0)
    {
        <div class="alert alert-warning">
            <strong>Warning:</strong> This shop has @Model.ShopStock.Count stock items. Deleting the shop will also delete all associated stock records.
        </div>
    }

    <form asp-action="Delete">
        <input type="hidden" asp-for="ShopId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>