@model EasyGames.Models.Emailing.EmailCampaign
@{
    ViewData["Title"] = "Campaign Details";
}
<div class="d-flex justify-content-between align-items-start mb-3">
    <div>
        <h1 class="h4 mb-1">@Model.Name</h1>
        <div class="text-muted">@Model.Subject</div>
        <div class="small text-muted mt-1">
            Status: @Model.Status | Public: @(Model.IsPublic ? "Yes" : "No") |
            Published: @(Model.PublishedUtc?.ToString("yyyy-MM-dd HH:mm 'UTC'") ?? "-")
        </div>
    </div>
    <div class="btn-toolbar gap-2">
        @if (Model.IsPublic)
        {
            <form asp-action="Unpublish" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <button class="btn btn-warning">Unpublish</button>
            </form>
            <a asp-controller="PublicCampaigns" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-outline-secondary" target="_blank">View public page</a>
        }
        else
        {
            <form asp-action="Publish" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <button class="btn btn-success">Publish</button>
            </form>
        }
    </div>
</div>
<a class="btn btn-outline-secondary" asp-action="Codes" asp-route-id="@Model.Id">Discount Codes</a>

<div class="card">
    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" class="card-img-top" alt="" />
    }
    <div class="card-body">
        <p class="card-text" style="white-space:pre-line">@Model.Details</p>
        @if (!string.IsNullOrWhiteSpace(Model.CtaText) && !string.IsNullOrWhiteSpace(Model.CtaLink))
        {
            <a href="@Model.CtaLink" class="btn btn-primary">@Model.CtaText</a>
        }
    </div>
</div>
